---
CompileFlags:
  Add: [ 
    -std=c23, -xc, -Wall, -Wextra, -Wno-empty-translation-unit,  -pedantic,
    -I../include, -I../include_priv,
    -I/opt/devkitpro/devkitARM/arm-none-eabi/include
  ]
  Compiler: arm-none-eabi-gcc
---
If:
  PathMatch: [.*\.hpp, .*\.cpp, .*\.cc ]

CompileFlags:
  Add: [
    -std=c++23, -xc++, -Wall, -Wextra, -Wnoempty-translation-unit, -pedantic,
    -I../include, -I../include_priv,
    -I/opt/devkitpro/devkitARM/arm-none-eabi/include
  ]
  Compiler: arm-none-eabi-g++
---
